{
  "compilerOptions": {
    // 기본 경로
    "rootDir": "./src",
    "outDir": "./dist",

    // 환경 설정
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",

    // JS + TS 혼용
    "allowJs": true, // JS 허용
    "checkJs": false, // JS 타입검사까지 원하면 true
    "strict": true, // 엄격 모드
    "skipLibCheck": true, // 외부 라이브러리 타입검사 생략

    // 경로 별칭 (선택)
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"]
}
